<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HelloPXL.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="clr-namespace:HelloPXL"
    xmlns:pages="clr-namespace:HelloPXL.Pages"
    
    Title="HelloPXL">

    <!--Om tegelijkertijd via de drie streepjes naar de andere contentPages te kunnen gaan, moet onderstaande lijn code verwijderd worden in de Shell (tussen xmlnns:pages en title)-->
    <!--Shell.FlyoutBehavior="Disabled"-->
    
    <!--Om de HelloPage te tonen moest het volgende aangepast worden: -->
    <!--ContentTemplate="{DataTemplate local:MainPage}"   needs to change to    ContentTemplate="{DataTemplate local:HelloPage}" -->
    <!--xmlns:local="clr-namespace:HelloPXL"    needs to change to xmlns:app="clr-namespace:HelloPXL"   en   xmlns:pages="clr-namespace:HelloPXL.Pages"-->


    <!--Initieel-->
    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate app:MainPage}"
        Route="Main" />

    <!--Labo deel 1-->
    <ShellContent
        Title="Hello"
        ContentTemplate="{DataTemplate pages:HelloPage}"
        Route="Hello" />

    <!--Labo deel 2-->
    <ShellContent
    Title="Home"
    ContentTemplate="{DataTemplate pages:HomePage}"
    Route="Home" />
    
</Shell>


